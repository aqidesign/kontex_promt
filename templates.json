{
  "categories": {
    "object_manipulation": {
      "name": "物体操作",
      "templates": [
        {
          "id": "remove_object",
          "name": "移除物体",
          "prompt": "Remove {object}",
          "description": "从图像中移除指定物体",
          "parameters": ["object"]
        },
        {
          "id": "add_object",
          "name": "添加物体",
          "prompt": "Add {object} {position}",
          "description": "在指定位置添加物体",
          "parameters": ["object", "position"]
        },
        {
          "id": "replace_object",
          "name": "替换物体",
          "prompt": "Replace {old_object} with {new_object}",
          "description": "将旧物体替换为新物体",
          "parameters": ["old_object", "new_object"]
        }
      ]
    },
